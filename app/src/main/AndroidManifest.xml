<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/schedule_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31">

        <!-- Login Activity -->
        <activity
            android:name=".Login"
            android:theme="@style/Theme.ScheduShare.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Home Activity -->
        <activity
            android:name=".Home"
            android:theme="@style/Theme.ScheduShare.NoActionBar" />

        <!-- Events Activity -->
        <activity
            android:name=".EventsList"
            android:theme="@style/Theme.ScheduShare.NoActionBar" />

        <!-- Summary Activity -->
        <activity
            android:name=".Summary"
            android:theme="@style/Theme.ScheduShare.NoActionBar" />

        <!-- Friends List Activity -->
        <activity
            android:name=".FriendsList"
            android:theme="@style/Theme.ScheduShare.NoActionBar" />

        <!-- Add Event Activity -->
        <activity
            android:name=".AddEvent"
            android:theme="@style/Theme.ScheduShare.NoActionBar" />

        <!-- Edit Event Activity -->
        <activity
            android:name=".EditEvent"
            android:theme="@style/Theme.ScheduShare.NoActionBar" />

        <!-- Edit Friend Activity -->
        <activity
            android:name=".EditFriend"
            android:theme="@style/Theme.ScheduShare.NoActionBar" />

        <!-- Add Friend Activity  -->
        <activity
            android:name=".AddFriend"
            android:theme="@style/Theme.ScheduShare.NoActionBar" />

        <!-- Friend Calendar Activity -->
        <activity
            android:name=".FriendCalendar"
            android:theme="@style/Theme.ScheduShare.NoActionBar" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>